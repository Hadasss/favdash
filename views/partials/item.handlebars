<div class="p-3 is-justify-content-center">
  <div class="is-flex-direction-column">
    <a class="is-active" id="name">
      {{name}}
    </a>
    <p id="display_url">{{display_url}}</p>
    <p id="url">{{url}}</p>
    <p id="comment_area">{{comment_area}}</p>

  </div>
  <div>
    <a class="is-pulled-right" href="/dashboard/edit-item/{{id}}"><img
        src="https://img.icons8.com/pastel-glyph/20/000000/edit--v1.png"
      /></a>
    <a class="is-pulled-right" href="/dashboard/delete-item/{{id}}"><img
        src="https://img.icons8.com/ios/20/000000/delete-trash.png"
      /></a>
  </div>
</div>